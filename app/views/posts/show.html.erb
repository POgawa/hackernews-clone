<h1><%= link_to @post.link, "#{@post.link}"%></h1>

<h4>This post has these comments</h4>
<ul>
    <li><%= @post.comments %></li>
</ul>


<p><%= link_to "Vote for this post", new_vote_path(@post), :class => "btn btn-default"%></p>
<p><%= link_to "Edit this post", edit_post_path(@post), :class => "btn btn-default" %></p>
<p><%= link_to "Delete this post", post_path(@post),
                         :confirm => "You sure?",
                         :method => "delete",
                         :class => "btn btn-danger" %></p>


<p><%= link_to "Return to front page", posts_path %></p>
